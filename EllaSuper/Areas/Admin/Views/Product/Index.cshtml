@using Ella.Core.Entity
@model List<Product>
@{
    ViewData["Title"] = "Index";
}
<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> </span> Product Tables</h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <a asp-controller="Product" asp-action="Create" class=" btn btn-primary btn-lg"> Create Product </a>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Material</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th>Discount</th>
                            <th>D.Price</th>
                            <th>Barcode</th>
                            <th>Brand</th>
                            <th>Size</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                    @foreach (var product in Model)
                    {
                        <tbody class="table-border-bottom-0">
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@product.Title</strong></td>
                                <td>@product.Description</td>
                                <td>@product.SubTitle</td>
                                <td>
                                    <ul  class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                       <li  data-bs-toggle="tooltip"
                                        data-popup="tooltip-custom"
                                        data-bs-placement="top"
                                        class="avatar avatar-xs pull-up">
                                            <img  src="~/admin/assets/img/product/@product.ImageUrl" alt="Avatar" class="rounded-circle" />
                                        </li>

                                    </ul>
                                </td>
                                <td><span>@product.Price</span></td>
                                <td><span>@product.Discount</span></td>
                                <td><span>@product.DiscountPrice</span></td>
                                <td><span>@product.Barcode</span></td>
                                <td><span>@product.Brand.Name</span></td>
                                <td><span>@product.Size.Name</span></td>
                                <td><span>@product.Category.Name</span></td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">

                                            <a type="submit" class="dropdown-item" asp-action="Update" asp-route-id="@product.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>

                                            <form method="post" asp-action="Delete">
                                                <button type="submit" asp-action="Delete" asp-route-id="@product.Id" class="dropdown-item"><i class="bx bx-trash me-1"></i> Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        </tbody>
                    }

                </table>
            </div>
        </div>
        <!--/ Basic Bootstrap Table -->


    </div>
    <!-- / Content -->
    <!-- Footer -->



</div>
<!-- Content wrapper -->
