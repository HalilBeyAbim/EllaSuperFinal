@using EllaSuper.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<div class="page register-page">
    <div class="container container-1170">
        <div class="heading">
            <nav class="breadcrumb breadcrumb-left" aria-label="breadcrumbs">
                <a class="link" asp-controller="home" asp-action="index">Home</a>
                <span class="separate" aria-hidden="true">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M 7.75 1.34375 L 6.25 2.65625 L 14.65625 12 L 6.25 21.34375 L 7.75 22.65625 L 16.75 12.65625 L 17.34375 12 L 16.75 11.34375 Z"></path>
                    </svg>
                </span>
                <span>Register</span>
            </nav>
            <h3 class="page-title text-left uppercase">
                My Account
            </h3>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 col-lg-6 sign-in">
                <div class="login-heading">
                    <h3 class="title">Rgister</h3>
                </div>
            </div><!-- End register button -->
        </div>
        <div class="col-12 col-md-6 col-lg-6 register">
            <div class="wrapper-content">
                <div class="register-heading">
                </div>
                <form  method="post" accept-charset="UTF-8" class="contact-form">
                    <div asp-validation-summary="All" class="text danger"></div>
                    <input type="hidden" name="form_type" value="contact"><input type="hidden" name="utf8" value="✓">
                    <div class="form-field">
                        <label class="form-label">First Name</label>
                        <input class="form-input form-input-placeholder" asp-for="FirstName">
                    </div>
                    <div class="form-field">
                        <label class="form-label">Last Name</label>
                        <input class="form-input form-input-placeholder" asp-for="LastName">
                    </div>
                    <div class="form-field">
                        <label class="form-label">Username</label>
                        <input class="form-input form-input-placeholder" asp-for="UserName">
                    </div>
                    <div class="form-field">
                        <label class="form-label">Your Email Address<span class="red-asterisk">*</span></label>
                        <input class="form-input form-input-placeholder" asp-for="Email">
                    </div>>
                    <div class="form-field">
                        <label class="form-label" for="password-rg">Your Password<span class="red-asterisk">*</span></label>
                        <input id="password-rg" class="form-input form-input-placeholder" asp-for="Password">
                    </div>
                    <div class="form-field">
                        <label class="form-label" for="password-rg"> Confirm Passwor <span class="red-asterisk">*</span></label>
                        <input id="password-rg" class="form-input form-input-placeholder" asp-for="ConfirmPassword">
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="button button-1" value="Submit Contact">Submit Contact</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End header -->
</div>

